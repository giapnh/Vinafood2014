<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#6600ff"
                android:endColor="#fff"
                android:angle="0" />
            <stroke
                android:width="1dp"
                android:color="#fff" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#6600ff"
                android:endColor="#bbccff"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="@color/white" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="#6600ff"
                android:endColor="#ff0066"
                android:angle="180" />
            <stroke
                android:width="1dp"
                android:color="@color/white" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>
