<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape
        	xmlns:android="http://schemas.android.com/apk/res/android"
        	android:shape="oval">
            <gradient
                android:startColor="@color/blue"
                android:endColor="@color/white"
                android:angle="90" />
            <stroke
                android:width="3dp"
                android:color="@color/grey" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape
        	xmlns:android="http://schemas.android.com/apk/res/android"
        	android:shape="oval">
            <gradient
                android:endColor="@color/green"
                android:startColor="@color/cyan"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/yellow" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape
        	xmlns:android="http://schemas.android.com/apk/res/android"
        	android:shape="oval">
            <gradient
                android:endColor="@color/white"
                android:startColor="#bb3333"
                android:angle="0" />
            <stroke
                android:width="2dp"
                android:color="@color/white" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
