<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#00ff00ff"
                android:endColor="#55d75d6c"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#d75d6c" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/green"
                android:startColor="@color/cyan"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/yellow" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#00d75d6c"
                android:startColor="#00ff00ff"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#00ff00ff" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>
