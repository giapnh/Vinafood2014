<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:padding="7dip"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    <LinearLayout 
    android:id="@+id/linearLayout1" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:gravity="center_vertical">
        <ImageView 
        android:layout_width="wrap_content" 
        android:id="@+id/img_place" 
        android:layout_height="wrap_content" 
        android:src="@drawable/ic_info">
        </ImageView>
        <TextView 
        android:text="Make a semantic question is not easy! This help will show you how to do it step by step ..." 
        android:lines="3"
        android:textSize="14dip"
        android:textColor="@color/RG"
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent" android:layout_marginLeft="5dip">
        </TextView>
    </LinearLayout>
    <LinearLayout 
    android:layout_marginTop="3dip"
    android:background="@color/WHITE"
    android:layout_width="fill_parent" 
    android:layout_height="1dip">
    </LinearLayout>
    <ScrollView 
    android:layout_width="fill_parent" 
    android:layout_marginTop="5dip" android:layout_height="250dip">
        <LinearLayout 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent">
        	<WebView 
        	android:id="@+id/helpContentWebView"
        	android:layout_height= "wrap_content"
        	android:layout_width= "fill_parent"
        	>
        	</WebView>
        </LinearLayout>
    </ScrollView>
    <LinearLayout 
    android:orientation="vertical"
    android:gravity="bottom"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent">
    	<LinearLayout 
	    android:layout_marginTop="3dip"
	    android:background="@color/WHITE"
	    android:layout_width="fill_parent" 
	    android:layout_height="1dip">
	    </LinearLayout>
        <Button 
        android:text="Cancel" 
        android:layout_height="wrap_content" 
        android:id="@+id/cancelHelpPlaceSearchDialogButton" 
        android:layout_width="100dip">
        </Button>
    </LinearLayout>
</LinearLayout>
