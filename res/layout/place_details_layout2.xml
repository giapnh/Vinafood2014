<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layy70"
        android:background="@drawable/top_bar_bg" >

        <include
            android:id="@+id/icon_inside"
            layout="@layout/icon_inside_layout"
            android:onClick="onBack" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/icon_inside"
            android:src="@drawable/amsc_arrow_next" />

        <TextView
            android:id="@+id/txt_sub_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView2"
            android:text="Chi tiết địa điểm"
            android:textColor="#88009900"
            android:textSize="@dimen/text_24"
            android:textStyle="bold|italic" />

        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="@dimen/layx70"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/giapnh_button_search_topbar_selector"
            android:onClick="onSearchButtonClick"
            android:src="@drawable/icon_search" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layy70"
        android:layout_below="@+id/top_bar"
        android:alwaysDrawnWithCache="true"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/btnLike"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/user_menu_item_selector"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/layx60"
                android:layout_height="@dimen/layy40"
                android:background="@drawable/user_detail_like_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Like" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnComment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/user_menu_item_selector"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/layx60"
                android:layout_height="@dimen/layy40"
                android:background="@drawable/user_detail_review_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Comment" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnRating"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/user_menu_item_selector"
            android:gravity="center"
            android:onClick="onRating"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/layx60"
                android:layout_height="@dimen/layy40"
                android:background="@drawable/user_detail_point" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="2.90"
                android:gravity="center"
                android:text="Rating" />
        </LinearLayout>

        <!-- Favorist checkbox -->

        <LinearLayout
            android:id="@+id/btnFavorist"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/user_menu_item_selector"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/layx60"
                android:layout_height="@dimen/layy40"
                android:background="@drawable/user_detail_checkin" />

            <TextView
                android:id="@+id/btnText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="2.90"
                android:gravity="center"
                android:text="Save" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layy1"
        android:layout_below="@+id/user_layout"
        android:background="@color/GREEN" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/view1"
        android:layout_margin="1dp"
        android:background="#eeffffff"
        android:scrollbarThumbVertical="@drawable/scroll_bar"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layy350" >

                <ImageView
                    android:id="@+id/imgNoImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layy350"
                    android:src="@drawable/no_image_yet" />

                <WebView
                    android:id="@+id/placeImageView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layy350"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:id="@+id/View01"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layy1"
                android:background="@color/grey_standard" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/placeTypesTextView"
                            style="@style/TitleText"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dip"
                            android:textColor="@color/BLUE" >
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ratingLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/placeAddressTextView"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dip"
                            android:textColor="@color/BLACK"
                            android:textStyle="italic" >
                        </TextView>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:layout_width="@dimen/layx40"
                    android:layout_height="@dimen/layy40"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn_small_ic_share_selector"
                    android:onClick="onSharePlace" />

                <ToggleButton
                    android:id="@+id/btn_bookmark"
                    android:layout_width="@dimen/layx40"
                    android:layout_height="@dimen/layy40"
                    android:layout_margin="4dp"
                    android:background="@drawable/btn_bookmark_selector"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <View
                android:id="@+id/View02"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layy1"
                android:background="@color/grey_standard" />

            <RelativeLayout
                android:id="@+id/call_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2200ffff"
                android:gravity="center_vertical"
                android:onClick="onPhoneCall" >

                <ImageView
                    android:id="@+id/ic_phone"
                    android:layout_width="@dimen/layx40"
                    android:layout_height="@dimen/layy40"
                    android:src="@drawable/ic_call" />

                <TextView
                    android:id="@+id/txt_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ic_phone"
                    android:text="No number"
                    android:textColor="@color/BLACK"
                    android:textSize="@dimen/text_19"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/balloon_disclosure" />
            </RelativeLayout>

            <!-- View Map -->

            <View
                android:id="@+id/View03"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layy1"
                android:background="@color/grey_standard" />

            <RelativeLayout
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#22ff00ff"
                android:gravity="center_vertical"
                android:onClick="onViewMap" >

                <ImageView
                    android:id="@+id/ic_map"
                    android:layout_width="@dimen/layx40"
                    android:layout_height="@dimen/layy40"
                    android:src="@drawable/ic_map" />

                <TextView
                    android:id="@+id/txt_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ic_map"
                    android:text="Xem bản đồ"
                    android:textColor="@color/BLACK"
                    android:textSize="@dimen/text_19" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/balloon_disclosure" />
            </RelativeLayout>

            <!-- Detail information -->

            <View
                android:id="@+id/View04"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layy1"
                android:background="@color/grey_standard" />

            <RelativeLayout
                android:id="@+id/detail_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#22ffff00"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/ic_detail"
                    android:layout_width="@dimen/layx40"
                    android:layout_height="@dimen/layy40"
                    android:src="@drawable/ic_detail_info" />

                <TextView
                    android:id="@+id/detailTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ic_detail"
                    android:text="Thông tin chi tiết"
                    android:textColor="@color/BLACK"
                    android:textSize="@dimen/text_19" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_infor_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/BLACK"
                android:textSize="@dimen/text_18" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>